public class Calculator {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// * / + - %
		char operatorMath = '*';
		double num1 = 40.0;
		double num2 = 24.5;
		double result;
		if (operatorMath == '+') {
			result = num1 + num2;
			System.out.println(result);
		} else if (operatorMath == '*') {
			result = num1 * num2;
			System.out.println(result);
		} else if (operatorMath == '/') {
			result = num1 / num2;
			System.out.println(result);
		} else if (operatorMath == '-') {
			result = num1 - num2;
			System.out.println(result);
		} else if (operatorMath == '%') {
			result = num1 % num2;
			System.out.println(result);
		} else {
			System.out.println("wrong data");
		}

		System.out.println("-----");

		switch (operatorMath) {
		case '+':
			result = num1 + num2;
			System.out.println(result);
			break;
		case '*':
			result = num1 * num2;
			System.out.println(result);
			break;
		case '/':
			result = num1 / num2;
			System.out.println(result);
			break;
		case '-':
			result = num1 - num2;
			System.out.println(result);
			break;
		case '%':
			result = num1 % num2;
			System.out.println(result);
			break;
		default:
			System.out.println("no data");
		}
	}

}
